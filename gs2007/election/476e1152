  <h1><!-- InstanceBeginEditable name="Title" -->The Right Reverend George L.R. Bruce<!-- InstanceEndEditable --></h1>
  <!-- InstanceBeginEditable name="Content" -->
  <table width="100%" border="0" cellpadding="5" cellspacing="0">
